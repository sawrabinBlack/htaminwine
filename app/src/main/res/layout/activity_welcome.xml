<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.WelcomeActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="@dimen/margin_medium_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/htaminwine" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login"/>

        <TextView
            android:layout_marginTop="@dimen/margin_medium_3"
            android:textSize="25sp"
            android:fontFamily="@font/poppins"
            android:text="Track Your Health"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="@dimen/margin_medium_3"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginHorizontal="@dimen/margin_medium_3"
            android:fontFamily="@font/poppins"
            android:text="With amazing inbuilt tools you can track your progress."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:backgroundTint="#FF8473"
            android:paddingHorizontal="@dimen/margin_xlarge"
            android:paddingVertical="@dimen/margin_card_medium_2"
            android:shadowColor="@color/black"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:fontFamily="@font/poppins"
            android:text="စတင်မည်"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="@dimen/margin_medium_2" />

        <RelativeLayout
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLabelAlreadyAccountWelcome"
                android:text="Already Have An Account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvWelcomeLogin"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_toEndOf="@id/tvLabelAlreadyAccountWelcome"
                android:layout_width="wrap_content"
                android:textColor="#FF8473"
                android:text="Log In"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>