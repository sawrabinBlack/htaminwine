<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:layout_marginTop="87dp"
        android:src="@mipmap/htaminwine"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:src="@mipmap/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_marginEnd="@dimen/margin_large"
        android:background="@drawable/background_home_calorie"
        android:hint="Username"
        android:padding="@dimen/margin_medium" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:inputType="textPassword"
        android:padding="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:background="@drawable/background_home_calorie"
        android:hint="Password" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:backgroundTint="#FF8473"
        android:paddingHorizontal="@dimen/margin_xlarge"
        android:paddingVertical="@dimen/margin_medium_2"
        android:shadowColor="@color/black"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:fontFamily="@font/poppins"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="@dimen/margin_medium_2" />

    <TextView
        android:id="@+id/tvSignUpLogIn"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:textSize="17sp"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_dont_have_account"/>
</LinearLayout>